rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write documents in their own 'users' subcollections
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own profile (a document, not a collection)
    match /users/{userId}/profile/profile {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
