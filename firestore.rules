
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'exercises' subcollection within each user's document
    // This rule allows a user to read and write documents in their own 'exercises' subcollection.
    match /users/{userId}/exercises/{exerciseId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Add rules for other user-specific collections (e.g., routines, workoutLogs) here as they are implemented.
    // Example:
    // match /users/{userId}/routines/{routineId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
    // match /users/{userId}/workoutLogs/{logId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
